                        <p class="timePosted">Time Placeholder</p>
                    </div>
                </div>

                <div class="post">
                    <!-- The Post -->
                </div>

                <div class="postInfo">
                    <div class="likeComment">
                        <!-- Like and Comment Image -->
                        <div class="like"></div>
                        <div class="comment"></div>
                    </div>

                    <div class="postDescription">
