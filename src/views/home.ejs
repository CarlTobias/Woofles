<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Woofles</title>
        <link rel="stylesheet" href="/css/home.css"> <!-- /css/home.css (for .ejs) -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
            integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
            crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>

    <body>
        <div class="headerBar">
            <div class="logoContainer">
                <img src="/assets/images/logoTemp.png" alt="Woofles Logo" id="logo">
                <!-- /assets/images/logoTemp.png (for .ejs) -->
            </div>

            <div class="dropdownMenu">
                <button class="dropdown" onclick="toggleMenu">
                    <i class="fa-solid fa-bars"></i>
                </button>

                <div class="menu">
                    <!-- Profile -->
                    <div class="imageText">
                        <img src="/assets/images/profileImage.png" alt="Profile">

                        <a href="">Profile</a>
                    </div>

                    <!-- Friends -->
                    <div class="imageText">
                        <img src="/assets/images/friendsImage.png" alt="Friends">

                        <a href="">Friends</a>
                    </div>

                    <!-- Settings -->
                    <div class="imageText">
                        <img src="/assets/images/settingsImage.png" alt="Settings">

                        <a href="">Settings</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="postScrollArea">
            <!-- A typical post layout -->
            <% if (posts && posts.length> 0) { %>
                <% posts.forEach(post => { %>
            <div class="postBlock">
                <div class="userInfo">
                    <div class="profilePic">
                        <!-- User Profile Picture -->
                    </div>
                
                    <div class="usernameTime">
                        <p class="username">
                            <%= post.username %>
                        </p>
                        <p class="timePosted">
                            <%= post.createdAt.toLocaleString() %>
                        </p>
                    </div>
                </div>
            
                <div class="post">
                    <!-- The Post -->
                    <% if (post.media) { %>
                        <% if (post.media.includes(".mp4") || post.media.includes(".webm")) { %>
                            <video controls src="<%= post.media %>"></video>
                        <% } else { %>
                                <img src="<%= post.media %>" alt="Post">
                        <% } %>
                    <% } %>
                </div>
            
                <div class="postInfo">
                    <div class="likeComment">
                        <!-- Like and Comment Image -->
                        <div class="like"></div>
                        <div class="comment"></div>
                    </div>
                
                    <div class="postDescription">
                        <p class="postCaption">
                            <%= post.caption %>
                        </p>
                    </div>
                </div>
            </div>
            <% }); %>
        <% } else { %>
                <p>No posts found.</p>
        <% } %>
        </div>

        <div class="addPost">
            <button id="openAddPost">+</button>
        </div>

        <!-- Add Post Popup -->
        <div id="addPost" class="postPopup">
            <div class="popup-content">
                <div class="popupHeader">
                    <p class="popupText">Create a Post</p>
                    <span class="close">X</span>
                </div>
                <form id="postForm" action="/posts/create-post" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="username" value="<%= user.username %>">
                    <div class="postFromGroup1">
                        <textarea name="caption" placeholder="Write a caption..."></textarea>
                    </div>

                    <div class="postFromGroup2">
                        <input type="file" name="file" accept="image/*, video/*">
                        <button type="submit">Post</button>
                    </div>
                </form>
            </div>
        </div>

        <script src="/js/headerBar.js"></script>
        <script src="/js/dropdown.js"></script>
        <script src="/js/post.js"></script>
    </body>

</html>